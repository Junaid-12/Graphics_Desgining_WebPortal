@model Graphicsweb.Models.ClintData 

@{
    Layout = "~/views/shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contact</title>
</head>
<body>
    
    <div class="Add_tittle" style="margin-top:120px;" >
        <div class="mt-5">
            <p class="fs-3 text-capitalize text-center">Intersted just send us mail , we will reply you soon !!</p>
            <p> </p>
        </div>
    </div>
   
        

    
    
         <div class="container align-itens-center pt-5 pb-5  bg-light" >
             <div class=" " style="margin-left:200px;">
                 <h3>Contect Us-</h3>
                 <div >
                     <form method="post" asp-action="Index">
                         <div class=" d-flex mb-3 col-10 form-group">
                             <div class="col-5">
                                 <label for="name">Your Name</label>
                                 <input type="text" id="name" name="Name" class="form-control" required />
                             </div>
                             <div class="col-5" style="margin-left:20px;">
                                 <label for="Mobile"> Mobile-No</label>
                                 <input type="text" id="Mobile" name="Mobile" class="form-control" required />
                             </div>
                         </div>
                         <div class=" d-flex col-10 form-group">
                             <div class="col-5">
                                 <label for="Email">Email</label>
                                 <input type="email" id="Email" name="Email" class="form-control " required />
                             </div>
                             <div class="col-5 mt-1" style="margin-left:20px;">
                                 <label for="Plan">Choise-Plane</label>
                                 <select class="form-control" id="Plan" name="Plan">
                                     <option selected>Select an option</option>
                                     <option value="1">.Net</option>
                                     <option value="2">Web Desigining</option>
                                     <option value="3">Ux And Ui</option>
                                     <option value="4">Grapics Desiging</option>
                                 </select>
                             </div>
                         </div>
                         <div class=" d-flex col-9 mt-2 form-group">

                             <label for="Descripson"></label>
                             <textarea type="email" id="Descripson" name="Descripson" class="form-control mt-2 " required ></textarea>
                        
                         </div>
                         <div class=" d-flex col-12 form-group">

                             <div style="margin-left:10px;">
                                 <button class="btn btn-success col-12 mt-2" type="submit">Submit</button>
                             </div>
                         </div>

                     </form>
                
             </div>

         </div>
    
             </div>


</body>
</html>
